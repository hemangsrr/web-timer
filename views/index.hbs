<div class="row">
  <!-- Sidebar: Timers list -->
  <div class="col-md-3 mb-3">
    <div class="card h-100">
      <div class="card-header d-flex align-items-center justify-content-between">
        <span class="fw-bold"><i class="bi bi-clock-history me-2"></i>Timers</span>
        <button id="btnNewTimer" class="btn btn-sm btn-primary"><i class="bi bi-plus"></i> New</button>
      </div>
      <div class="list-group list-group-flush" id="timersList" style="max-height:70vh; overflow:auto;">
        <!-- Filled by JS -->
      </div>
    </div>
  </div>

  <!-- Main content: Selected timer -->
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <div class="d-flex align-items-center gap-2">
          <input type="text" id="timerName" class="form-control form-control-sm" placeholder="Timer name">
          <input type="text" id="timerTitle" class="form-control form-control-sm" placeholder="Title shown above timer">
          <button id="btnSaveMeta" class="btn btn-sm btn-outline-secondary"><i class="bi bi-save"></i> Save</button>
          <button id="btnCopyObs" class="btn btn-sm btn-outline-primary" disabled><i class="bi bi-copy"></i> Copy OBS Link</button>
        </div>
      </div>
      <div class="card-body">
        <div class="timer-display text-center mb-3">
          <div id="timerTitleDisplay" class="h4 mb-1"></div>
          <div id="timer" class="display-1">00:00:00</div>
          <div id="current-time" class="text-muted"></div>
        </div>

        <div class="row g-3 align-items-end">
          <div class="col-sm-2">
            <label class="form-label">Hours</label>
            <input type="number" id="hours" class="form-control" min="0" value="0">
          </div>
          <div class="col-sm-2">
            <label class="form-label">Minutes</label>
            <input type="number" id="minutes" class="form-control" min="0" max="59" value="5">
          </div>
          <div class="col-sm-2">
            <label class="form-label">Seconds</label>
            <input type="number" id="seconds" class="form-control" min="0" max="59" value="0">
          </div>
          <div class="col-sm-3">
            <label class="form-label">Target Date</label>
            <input type="date" id="targetDate" class="form-control">
          </div>
          <div class="col-sm-3">
            <label class="form-label">Target Time</label>
            <input type="time" id="targetTime" class="form-control" step="1">
          </div>
          <div class="col-sm-2 d-grid">
            <button id="btnStartToTarget" class="btn btn-outline-info">Start to Target</button>
          </div>
        </div>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-start mt-3">
          <button id="startBtn" class="btn btn-success btn-lg px-4 me-sm-3">
            <i class="bi bi-play-fill"></i> Start
          </button>
          <button id="pauseBtn" class="btn btn-warning btn-lg px-4 me-sm-3" disabled>
            <i class="bi bi-pause-fill"></i> Pause
          </button>
          <button id="resetBtn" class="btn btn-danger btn-lg px-4">
            <i class="bi bi-arrow-counterclockwise"></i> Reset
          </button>
        </div>

        <div class="row mt-3">
          <div class="col-sm-4">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="showMilliseconds">
              <label class="form-check-label" for="showMilliseconds">Show Milliseconds</label>
            </div>
          </div>
          <div class="col-sm-8">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="autoRestart">
              <label class="form-check-label" for="autoRestart">Auto-restart when reaching zero</label>
            </div>
          </div>
        </div>

        <hr class="my-3" />
        <div class="row g-3 align-items-end">
          <div class="col-sm-5">
            <label class="form-label">Font Family</label>
            <select id="fontFamily" class="form-select">
              <option value="Courier New">Courier New</option>
              <option value="Segoe UI">Segoe UI</option>
              <option value="Arial">Arial</option>
              <option value="Helvetica">Helvetica</option>
              <option value="Verdana">Verdana</option>
              <option value="Tahoma">Tahoma</option>
              <option value="Times New Roman">Times New Roman</option>
              <option value="Impact">Impact</option>
              <option value="Monaco">Monaco</option>
            </select>
          </div>
          <div class="col-sm-3">
            <label class="form-label">Font Size (px)</label>
            <input type="number" id="fontSize" class="form-control" min="10" max="300" value="72">
          </div>
          <div class="col-sm-2">
            <label class="form-label">Color</label>
            <input type="color" id="fontColor" class="form-control form-control-color" value="#0d6efd" title="Choose color">
          </div>
          <div class="col-sm-2 d-grid">
            <button id="btnSaveStyle" class="btn btn-outline-secondary"><i class="bi bi-brush"></i> Save Style</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal for Timer End -->
<div class="modal fade" id="timerEndModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Timer Complete!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>The countdown has reached zero.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
